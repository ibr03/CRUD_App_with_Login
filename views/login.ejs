<!--include header-->
<%- include('include/_header') %>
<!--/include header-->

<div class="row mt-5">
  <div class="col-md-5 m-auto">
    <div class="card card-body">
      <h2 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h2>
        <%- include ('include/_messages'); %>
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="email" class="mb-2"><strong>E-mail</strong></label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control mb-2"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password" class="mb-2"><strong>Password</strong></label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control mb-2"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block form-control mt-3">Login</button>
        </form>
        <p class="mt-4">
          No Account? <a href="/register">Register</a>
        </p>
    </div>
  </div>
</div>

<!--include footer-->
<%- include('include/_footer') %>
<!--/include footer-->