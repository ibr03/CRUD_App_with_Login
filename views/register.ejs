<!--include header-->
<%- include('include/_header') %>
<!--/include header-->

<div class="row mt-5">
    <div class="col-md-5 m-auto">
      <div class="card card-body">
        <h2 class="text-center mb-3"><i class="fas fa-user-plus"></i> Register</h2>
        <%- include ('include/_messages'); %>
        <form action="/register" method="POST">
          <div class="form-group">
            <label for="name" class="mb-2"><strong>Name</strong></label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control mb-2"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email" class="mb-2"><strong>Email</strong></label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control mb-2"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password" class="mb-2"><strong>Password</strong></label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control mb-2"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2" class="mb-2"><strong>Confirm Password</strong></label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control mb-2"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block form-control mt-3">Register</button>
        </form>
        <p class="mt-4">Have An Account? <a href="/login">Login</a></p>
      </div>
    </div>
  </div>

<!--include footer-->
<%- include('include/_footer') %>
<!--/include footer-->